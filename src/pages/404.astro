---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Not found">
  <div class="flex items-center justify-center min-h-[60vh] px-6">
    <div class="text-center max-w-md">
      <div class="mb-6">
        <h1 class="text-8xl font-bold mb-4 bg-gradient-to-r from-white to-gray-600 bg-clip-text text-transparent">404</h1>
        <p class="text-2xl font-semibold text-white mb-2">Page not found</p>
        <p class="text-gray-400">The page you're looking for doesn't exist or has been moved.</p>
      </div>
      <a href="/" class="btn-primary inline-block">
        Return home
      </a>
    </div>
  </div>
</Layout>
